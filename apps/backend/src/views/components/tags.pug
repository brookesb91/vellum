if styles
  link(rel="stylesheet", href=styles)
else
  style.
    html, body {
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      font-size: 16px;
      margin: 0;
    }

    .tags {
      display: flex;
      flex-direction: row;
      align-items: center;
      flex-wrap: wrap;
    }

    .tags .tag:not(:only-child):not(:last-child){
      margin-right: 0.5rem;
    }

    .tags .tag {
      display: flex;
      align-items: center;
      font-size: 0.825rem;
      line-height: 0.825rem;
      padding: 0.5rem;
      color: white;
      background: black;
    }

mixin tags(tags)
  .tags
    each tag in tags
      .tag
        span=tag.name