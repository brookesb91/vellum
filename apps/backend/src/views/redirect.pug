extends _layout

block append meta
  meta(http-equiv="refresh" content="3;URL='" + url + "'")

block append styles
  style.
    main {
      display: block;
      max-width: 1200px;
      margin: 0 auto;
      padding: 1rem;
      text-align: center;
    }

block append body
  main
    h4 Redirecting you to #{url}
    a(href=url) Take me there now!