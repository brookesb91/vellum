include components/tags

+tags(tags)

style.
  .items {
    list-style: none;
    flex-wrap: wrap;
    justify-content: center;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: row;
  }

  .items .item {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    width: 100%;
    min-width: 300px;
    max-width: 400px;
    height: 100%;
  }

  .item .item-image {
    position: relative;
    padding-top: 100%;
  }

  .item .item-image img {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    display: block;
    width: 100%;
    object-fit: cover;
  }

ul.items
  each item in items
    li.item
      a(href=item.url)
        .item-image
          img(src=item.image)
        h4.item-title=item.title
        p.item-subtitle=item.description
      footer
        .item-tags
          +tags(item.tags)